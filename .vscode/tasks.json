{
    // VS Code shell tasks for C++ single-file workflows
    "version": "2.0.0",
    "tasks": [
        {
            "label": "workflow-x64-Darwin-Debug",
            "type": "shell",
            "command": "cmake --workflow --preset x64-Darwin-Debug",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "format-all",
            "type": "shell",
            "command": "find . \\( -name \"*.cpp\" -o -name \"*.hpp\" \\) | xargs clang-format -i -style=file",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}
